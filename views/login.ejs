<div id="contact" class="contact ">
    <div class="container">
       <div class="row">
          <div class="col-md-12">
             <div class="titlepage">
                <h2><strong class="yellow">Sign Up</strong><br>Request for Sign Up</h2>
             </div>
          </div>
       </div>
       <div class="row">
          <div class="col-md-8 offset-md-2">
             <form id="post_form" class="contact_form" action="/login" method="post">
                <div class="row">
                  <div class="col-md-12 ">
                    
                     <% if (message) { %>
                        <p class="contact_control text-danger"><%= message %> </p>
                     <% } %>
                   </div>
                   <div class="col-md-12">
                      <input class="contact_control" placeholder="Email" type="email" name="email">
                   </div>
                   <div class="col-md-12">
                      <input class="contact_control" placeholder="Password" type="password" name="password">
                   </div>
                  
                   <div class="col-md-12">
                      <button type="submit" class="send_btn">SignUp</button>
                   </div>
             </form>
          </div>
       </div>
    </div>
 </div>
 </div>